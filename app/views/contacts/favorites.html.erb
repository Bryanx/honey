<nav class="top-navbar light-gray-bg">
  <header class="nav_header">Favorites</header>
</nav>

<div class="favorites">
  <ul>
    <% @contacts.sort_by(&:last_name).each do |c| %>
        <%= link_to contact_path(c) do %>
            <li class="first_name contact_item">
              <% if c.contact_image.exists? %>
                  <%= image_tag(c.contact_image.url, :class => "favorite_image") %>
              <% else %>
                  <%= image_tag(image_path("placeholder-user.png"), :class => "favorite_image") %>
              <% end %>
              <%= c.first_name %> <span class="last_name"><%= c.last_name %></span>
            </li>
        <% end %>
    <% end %>
  </ul>
</div>