<div class="login">
  <div class="container">
    <div class="form">
      <legend>login to account</legend>

      <%= form_for(:session, url: login_path) do |f| %>
          <%= f.email_field :email, :placeholder => "Email",class: "first_field" %>
          <%= f.password_field :password, :placeholder => "Password",class: "last_field" %>
          <%= f.submit "Login", class: "btn-submit" %>
          <%= link_to "Forgot password?", 'signup', class: "extra_form" %>
          <br />
          <%= link_to "Don't have an account? Sign up", 'signup', class: "extra_form" %>
    <% end %>


    </div>
  </div>
</div>