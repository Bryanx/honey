<div class="contacts">
  <section class="contacts_container">
    <%= form_tag(contacts_path, method: :get, class: "input-group col-md-12", role: 'search') do %>
        <div id="search_field">
          <div class="input-group col-md-12">
            <%= text_field_tag :term,
                               params[:term],
                               id: 'contacts_search',
                               autocomplete: :off,
                               placeholder: 'Search',
                               class: 'form-control input-lg' %>
            <div class="input-group-btn search-panel">
              <%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-search pull-right" %>
            </div>
          </div>
        </div>
    <% end %>

    <ul>
      <% @contacts.sort_by(&:last_name).each do |c| %>
          <%= link_to contact_path(c) do %>
              <li class="first_name contact_item">
                <%= c.first_name %> <span class="last_name"><%= c.last_name %></span>
              </li>
          <% end %>
      <% end %>
    </ul>

  </section>
</div>