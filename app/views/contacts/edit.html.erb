<nav class="top-navbar">
  <%= link_to contact_path(@contact) do %>
      <button type="button" class="nav-btn fifth-width">
        <span class="glyphicon glyphicon-chevron-left btn-block gray"></span>
      </button>
  <% end %>
  <%= link_to contact_path(@contact) do %>
      <button id="myBtn" type="button" class="nav-btn fifth-width nav-right">
        <span class="glyphicon glyphicon-ok btn-block gray"></span>
      </button>
  <% end %>
</nav>

<section class="contact">

    <%= form_for @contact, html: { id: "myForm" } do |c| %>
        <%= c.text_field :first_name %>
        <%= c.text_field :last_name %>
    <% end %>

</section>

<script>$(document).ready(function() {
    $('#myBtn').on('click', function() { $('#myForm').submit(); });
});</script>

